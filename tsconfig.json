{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "include": [
        "src"
    ],
    "files": [
        "./typings.d.ts"
    ],
    "typeRoots": [
        "./typings.d.ts"
    ],
    "allowSyntheticDefaultImports": true
}