{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
